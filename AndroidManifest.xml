<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cvbuilder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CVBuilder">

        <!-- Splash Screen Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Personal Details Activity -->
        <activity
            android:name=".PersonalDetailsActivity"
            android:exported="false" />

        <!-- Education Activity -->
        <activity
            android:name=".EducationActivity"
            android:exported="false" />

        <!-- Experience Activity -->
        <activity
            android:name=".ExperienceActivity"
            android:exported="false" />

        <!-- Certifications Activity -->
        <activity
            android:name=".CertificationsActivity"
            android:exported="false" />

        <!-- References Activity -->
        <activity
            android:name=".ReferencesActivity"
            android:exported="false" />

        <!-- CV Preview Activity -->
        <activity
            android:name=".FinalActivity"
            android:exported="false" />

    </application>

    <!-- Permissions (if needed) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>
